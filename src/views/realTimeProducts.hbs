<h1>Ecommerce Frutas & Verduras Websockets</h1>
<div id="container">
    <!-- Formulario para agregar un nuevo producto -->
    <div id="add-product-form">
        <h2>Agregar nuevo producto</h2>
        <form id="new-product-form" method="post" action="/api/products">
            <label for="name">Nombre:</label>
            <input type="text" id="name" name="name" required>

            <label for="description">Descripción:</label>
            <input type="text" id="description" name="description" required>

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" step="0.01" required>

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" required>

            <label for="category">Categoría:</label>
            <input type="text" id="category" name="category" required>

            <label for="code">Código:</label>
            <input type="text" id="code" name="code" required>

            <label for="thumbnail">URL del Thumbnail:</label>
            <input type="text" id="thumbnail" name="thumbnail" required>

            <button type="submit" onclick="addProduct(event)">Agregar Producto</button>
        </form>
    </div>
    <!-- Lista de productos -->
    <div id="products">
        <ul id="products-list">
            {{#each products}}
            <li data-id="{{this._id}}">
                <div id="container-img">
                    <img src="{{this.thumbnails.[0]}}" alt="{{this.name}}">
                </div>
                <h2>{{this.name}}</h2>
                <button class="btn-delete" onclick="deleteProduct('{{this._id}}')">Eliminar</button>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>